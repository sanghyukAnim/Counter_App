<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moon.counter.MainActivity">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/linearLayout">

       <ListView
           android:id="@+id/listview1"
           android:layout_width="352dp"
           android:layout_height="301dp"
           tools:layout_editor_absoluteX="-2dp"
           tools:layout_editor_absoluteY="16dp">
       </ListView>

   </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:id="@+id/textView_total"
        android:layout_width="353dp"
        android:layout_height="61dp"
        android:layout_marginRight="30dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/buttonForNewContent"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="256dp"
        android:text="새 항목"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_total" />

    <Button
        android:id="@+id/buttonHansum"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:text="이걸 안썼으면.."
        app:layout_constraintLeft_toRightOf="@+id/buttonForNewContent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_total" />


</android.support.constraint.ConstraintLayout>
